                },
                "description": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean"
                },
                "default": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "array",
