                          "Monitoring",
                          "Media",
                          "AI Tools",
                          "Search",
                          "Security",
                          "Social Media",
                          "Sports",
                          "Support",
                          "Translation",
                          "Audio",
                          "Travel",
                          "Messengers",
                          "Email",
                          "CRM",
                          "Enterprise",
                          "Job Search",
                          "Local files",
                          "General"
                        ]
                      }
                    }
                  },
                  "required": ["categories"]
                }
              }
            }
          }
        }
      }
    }
  }
}
