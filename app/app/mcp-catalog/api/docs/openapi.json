                "required": [
                  "mcp_protocol",
                  "github_metrics",
                  "deployment_maturity",
                  "documentation",
                  "dependencies",
                  "badge_usage",
                  "total"
                ]
              }
            },
            "required": ["score_breakdown"],
            "additionalProperties": false
          }
        ]
      }
