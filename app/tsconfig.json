{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Allows us to use vitest imports in tests without having to explicitly import them
    "types": ["vitest/globals"],
    /*
     Aliasing
    */
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@lib/*": ["lib/*"],
      "@mcpCatalog/*": ["app/mcp-catalog/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
