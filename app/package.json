{
  "name": "archestra-ai-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:studio": "pnpm drizzle-kit studio",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "build": "pnpm db:migrate && next build",
    "build:check": "next build",
    "dev": "pnpm drizzle-kit up && next dev",
    "start": "next start",
    "test": "vitest",
    "prettier": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "catalog:evaluate": "npx tsx app/mcp-catalog/scripts/evaluate-catalog.ts",
    "catalog:validate": "npx tsx app/mcp-catalog/scripts/validate-catalog.ts",
    "openapi:generate": "npx tsx app/mcp-catalog/scripts/generate-openapi-schema.ts && pnpm prettier --write app/mcp-catalog/api/docs/openapi.json",
    "codegen:all": "pnpm openapi:generate"
  },
  "packageManager": "pnpm@10.16.1",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@google/generative-ai": "^0.24.1",
    "@neondatabase/serverless": "^1.0.1",
    "@next/third-parties": "^15.5.3",
    "@radix-ui/react-slot": "1.2.3",
    "better-auth": "^1.3.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "swagger-ui-react": "^5.29.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ua-parser-js": "^2.0.5",
    "ws": "^8.18.3",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@octokit/rest": "^22.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19",
    "@types/swagger-ui-react": "^5.18.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.3",
    "csv-parse": "^6.1.0",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.0",
    "postcss": "^8.5",
    "postgres": "^3.4.7",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
